@model List<UserMessages>
<div class="container">
    <div class="mt-4 text-center">
        <h4 class="upper-headers text-center d-inline">Messaggi</h4>
    </div>
    <table class="table table-borderless mt-2">
        <thead>
            <tr class="upper-headers">
                <th scope="col">#</th>
                <th scope="col">Ora</th>
                <th scope="col">Nome</th>
                <th scope="col">Cognome</th>
                <th scope="col">Email</th>
                <th scope="col">Messaggio</th>
                <th scope="col">Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach(UserMessages m in Model)
            {
                <tr class="border-bottom border-black">
                    <th scope="row" class="site-font">@m.Id</th>
                    <td class="upper-headers">@m.MessageDateTime</td>
                    <td class="site-font">@m.Name</td>
                    <td class="site-font">@m.Surname</td>
                    <td class="site-font">@m.Email</td>
                    <td class="site-font">@m.Message</td>
                    <td>
                        <form asp-controller="UserMessages" asp-action="DeleteMessage" asp-route-id="@m.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="1 2 22 22" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if(Model.Count == 0)
    {
        <p class="site-font">Non c'è nessun messaggio</p>
    }
</div>
